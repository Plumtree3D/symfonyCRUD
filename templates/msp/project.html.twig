{% extends "base.html.twig" %}

{% block title %}{{ project.title }}{% endblock %}

{% block content %}
    <article class="container " style="flex: 1 0 auto;">
        <div class="row">
            <div class="col l8 s12">
                <h2>{{ project.title }}</h2>
                    
            </div>
        <div class="center-align"> 
        <img src="{{ asset('uploads/' ~ project.image) }}" class="responsive-img center-align">
        </div>
        </div>
        <div class="row">
                <p>
                    {{ project.description }}
                </p>

        <div class="row">
            <span> Check the project :<a href="{{ project.weblink }}" class=""> {{ project.weblink }} </a></span> <br>
            <span> GitHub Repository :<a href="{{ project.github }}" class=""> {{ project.github }} </a></span>
                    
        </div>
    </article>
{% endblock %}